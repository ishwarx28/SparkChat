<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Global Text Style -->
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <!-- background color for activity, fragment, dialog, drawer -->
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- navigation and status bar color -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>

        <!-- responsible for status bar icon color -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/isDarkModeOff</item>

        <item name="bottomSheetDialogTheme">@style/SparkChat_BottomSheetDialogStyle</item>
    </style>
	
	
	    <!-- Button Style Theme -->
    <!-- fragment_phone_auth#bttn_back -->
    <!-- fragment_push#bttn_login -->
    <style name="SparkChat_ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Button Style Theme for dialogs -->
    <!-- fragment_terms_and_privacy_policy#contact_developer_button -->
    <!-- fragment_terms_and_privacy_policy#dismiss_dialog_button -->
    <style name="SparkChat_DialogButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:background">@drawable/bg_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Navigation item Theme -->
    <style name="SparkChat_NavigationTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Form EditText -->
    <!-- fragment_phone_auth#tv_country_code -->
    <!-- fragment_phone_auth#ed_login_input -->
    <!-- fragment_push#ed_your_name -->
    <style name="SparkChat_FormEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_round </item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Primary TextView with Medium font Theme -->
    <!-- item_chat_toolbar#toolbar_title -->
    <style name="SparkChat_PrimaryMediumTextTheme_SingleLine" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Secondary TextView with regular font Theme -->
    <!-- fragment_push#tv_your_name-->
    <!-- item_main_connection#last_message -->
    <style name="SparkChat_SecondaryRegularTextTheme_MultiLine" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Secondary TextView with regular font Theme -->
    <!-- fragment_push#tv_push_update -->
    <!-- item_chat_toolbar#toolbar_subtitle -->
    <style name="SparkChat_SecondaryRegularTextTheme_SingleLine" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Secondary TextView with bold font Theme -->
    <!-- fragment_phone_auth#tv_login_prompt-->
    <style name="SparkChat_SecondaryBoldTextTheme_MultiLine" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Secondary TextView with bold font Theme -->
    <style name="SparkChat_SecondaryBoldTextTheme_SingleLine" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Global Toolbar Title Theme -->
    <!-- activity_authentication#label_toolbar -->
    <!-- item_home_toolbar#toolbar_title -->
    <!-- item_about_app_toolbar#toolbar_title -->
    <!-- fragment_about_app#app_name -->
    <style name="SparkChat_ToolbarTitleTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="paddingStart">@dimen/medium_padding</item>
        <item name="paddingEnd">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/primary_padding</item>
        <item name="android:paddingBottom">@dimen/primary_padding</item>
    </style>

    <!-- Non-Organised styles -->
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ToolbarTitleStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="UsernameTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/label_deleted_user</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="PrimaryTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

   <style name="SparkChat_BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SparkChat_BottomSheetTheme</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/secondaryNavigationBarColor</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="SparkChat_BottomSheetTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_sparkchat_dialog_sheet</item>
    </style>
</resources>
